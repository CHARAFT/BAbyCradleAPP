<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BAbyCradleAPP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DCC9EA</item>
        <item name="colorPrimaryVariant">#DCC9EA</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#DCC9EA</item>
        <item name="colorSecondaryVariant">#DCC9EA</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BAbyCradleAPP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BAbyCradleAPP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BAbyCradleAPP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

        <!-- Style for rounded corners -->
        <style name="RoundedCornerImageView" parent="">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">20dp</item>
        </style>
</resources>